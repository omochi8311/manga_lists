<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">登録漫画一覧</h3>
    </div>
    <div class="col-md-2">
      <div class="title">
         <%= link_to "漫画登録",new_admin_manga_path,class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= search_form_for @q do |f| %>
        <%= f.text_field :title_cont %>
        <%= f.submit "検索" %>
      <% end %>
      <% if @manga_search.present? %>
        <table class="table">
          <tr>
            <th>漫画画像</th>
            <th>タイトル</th>
            <th>著者</th>
            <th></th>
          </tr>
        <% @mangas.each do |manga| %>
          <tr>
            <td><%= link_to (image_tag(manga.rakuten_image_url, style: "width: 70px;height: 100px;display: inline-block;")), manga.rakuten %></td>
            <td><%= manga.title %></td>
            <td><%= manga.author %></td>
            <td><%= link_to "削除する",admin_manga_path(manga),method: :delete,class: "btn btn-danger" %></td>
          </tr>
        <% end %>
        </table>
      <% else %>
        <p>検索結果はありません</p>
      <% end %>
    </div>
  </div>
  <div class="col-lg-12 justify-content-center d-flex align-items-center">
    <%= paginate @mangas %>
  </div>
</div>