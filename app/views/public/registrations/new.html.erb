<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">新規登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <table class="table table-borderless">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <tr>
          <td><%= f.label :nickname,"ニックネーム" %></td>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <td><%= f.label :email,"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :password,"パスワード" %></td>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation,"パスワード（確認用）" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
      <%= f.submit "新規登録",class: "btn btn-primary w-50 mt-2" %>
      <% end %>
    </div>
  </div>
</div>