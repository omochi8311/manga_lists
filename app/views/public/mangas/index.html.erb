<!--検索フォーム-->
<%= search_form_for @q do |f| %>
  <!--name_contは、あいまい検索を指定-->
  <%= f.text_field :name_cont %>
  <%= f.submit "検索" %>
<% end %>
<!--検索結果-->
<% if @posts.present? %>
  <!--検索がヒットした場合-->
  <% @posts.each do |post| %>
    <%= post.manga.title %>
    <%= post.manga.author %>
    <%= post.evaluation  %>
    <%= post.purchase %>
    <%= post.genre.name %>
    <%= post.customer.nickname %>
  <% end %>
<% else %>
  <!--検索がヒットしなかった場合-->
  <p>検索結果はありません</p>
<% end %>