<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">ログイン</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email,"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password,"パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td>
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= f.submit "ログイン",class: "btn btn-primary w-50 mt-2" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
