<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">漫画投稿登録</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <%= form_with model: @post, url: manga_post_create_path(@manga.id), local: true do |f| %>
          <div><%= link_to (image_tag(@manga.rakuten_image_url, style: "width: 140px;height: 200px;display: inline-block;")), @manga.rakuten %></div>
          <div>
            著者：
            <%= @manga.author %>
          </div>
          <div>
            タイトル：
            <%= @manga.title %>
          </div>
    </div>
    <div class="col-md-6">
          <div>
            <%= f.label :thoughts,'感想 ', class:'col-md-3 col-form-label' %>
            <%= f.text_field :thoughts %>
          </div>
          <div id="star">
            <%= f.label :evaluation,'評価', class:'col-md-3 col-form-label' %>
            <%= f.hidden_field :evaluation %>
          </div>
          <script>
            $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('/assets/star-off.png') %>',
            starOn : '<%= asset_path('/assets/star-on.png') %>',
            scoreName: 'post[evaluation]',
            half: false
            });
          </script>
          <div>
            <%= f.label :purchase,'購入元 ', class:'col-md-3 col-form-label' %>
            <%= f.text_field :purchase %>
          </div>
          <div>
            <%= f.label :is_release,'公開ステータス', class:'col-md-3 col-form-label' %>
            <%= f.radio_button:is_release, :ture %>
            <%= f.label :公開 %>
            <%= f.radio_button:is_release, :false %>
            <%= f.label :非公開 %>
          </div>
      <div class="d-flex align-items-center justify-content-center" style="height:100px;" >
          <%= f.submit "登録",class: "btn btn-success w-25" %>
        </div>
        <% end %>
    </div>
  </div>
  <div class="row">
    <%#= form_with model: @post,url: posts_path(@post) do |f| %>
  </div>
</div>