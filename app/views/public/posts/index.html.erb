<div class="container">
  <div class="row">
    <div class="">
      <h3 class="title">漫画投稿一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>タイトル</th>
          <th>著者</th>
          <th>評価</th>
          <th>購入元</th>
          <th>ジャンル名</th>
          <th>ユーザー名</th>
        </tr>
      </thead>
      <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td></td>
          <td><%= post.purchase %></td>
          <td></td>
          <td><%= posts.customer.nickname %></td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>