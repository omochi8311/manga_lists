<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">漫画投稿一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <%= search_form_for @q do |f| %>
        <%= f.text_field :manga_title_cont %>
        <%= f.submit "検索" %>
      <% end %>
      <% if @posts.present? %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>タイトル</th>
          <th>著者</th>
          <th>評価</th>
          <th>購入元</th>
          <th>ジャンル名</th>
          <th>ユーザー名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <% @posts.each do |post| %>
        <% if post.manga.blank? %>
          <% next %>
        <% end %>
        <% if post.is_release == false %>
          <% next %>
        <% end %>
        <tr>
          <td><%= post.manga.title %></td>
          <td><%= post.manga.author %></td>
          <td>
            <div id="star<%= post.id %>"></div>
            <script>
              $('#star<%= post.id %>').raty({
              size      : 36,
              starOff : '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: <%= post.evaluation %>,
              });
            </script>
          </td>
          <td><%= post.purchase %></td>
          <td>
            <% @manga_genres.each do |m_genre| %>
              <% if post.manga_id === m_genre.manga_id %>
                <p><%= m_genre.genre.name %></p>
              <% end %>
            <% end %>
          </td>
          <td><%= post.customer.nickname %></td>
          <td><%= link_to "詳細",manga_post_show_path(post.manga.id, post.id) %></td>
          <% end %>
          <% else %>
            <p>検索結果はありません</p>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-lg-12 justify-content-center d-flex align-items-center">
    <%= paginate @posts %>
  </div>
</div>