<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title">プロフィール編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <% if @customer.image.attached? %>
        <%= image_tag @customer.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
        <%= form_with model: @customer,url: customers_update_path(@customer) do |f| %>
          <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= f.text_field :introduction %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-center" style="height:200px;">
    <%= link_to "退会する",customers_withdrawal_path,class: "btn btn-danger mr-5 w-25" %>
    <%= f.submit "保存する",class: "btn btn-success w-25" %>
    <% end %>
  </div>
</div>