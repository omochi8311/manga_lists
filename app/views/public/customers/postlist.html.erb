<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class="title"><%= @customer.nickname %>さんの漫画一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-11">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>著者</th>
            <th>評価</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @customer.posts.each do |post| %>
          <% next if post.manga == nil%>
          <tr>
            <td><%= post.manga.title %></td>
            <td><%= post.manga.author %></td>
            <td>
              <div id="star<%= post.id %>"></div>
              <script>
                $('#star<%= post.id %>').raty({
                size      : 36,
                starOff : '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= post.evaluation %>,
                });
              </script>
            </td>
            <td><%= link_to "詳細",manga_post_show_path(manga_id: post.manga.id, post_id: post.id),class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>